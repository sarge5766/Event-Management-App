@model IEnumerable<EventManagement.Domain.IEvent>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Events</h2>
<a href="/Events/Add">Add Event</a>

<table>
    @foreach (var e in Model) {
        <tr>
            <td>@e.Name</td>
            <td>@e.EventDate.ToString("MM/dd/yyyy")</td>
            <td><a href="/Events/UpdateEvent?id=@e.EventId">Edit</a> | <a href="/Events/Delete?id=@e.EventId"  onclick="return confirm('Are you sure you want to delete this?')">Delete</a></td>
        </tr>
           }
</table>
