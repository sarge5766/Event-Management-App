@model EventManagement.Domain.Contact
@using EventManagement.Domain
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Update", "Contacts", FormMethod.Post)) {
        @Html.HiddenFor(c => c.ContactId)
        <div class="contact-form">
            <div class="title">Update Contact</div>
            <div class="text-box-wrapper">
                @Html.TextBoxFor(c => c.FirstName, new { placeholder = "Enter First Name" })
                @Html.TextBoxFor(c => c.LastName, new { placeholder = "Enter Last Name" })
                @Html.TextBoxFor(c => c.Email, new { placeholder = "Enter Email" })
                @Html.TextBoxFor(c => c.MobileNumber, new { placeholder = "Enter Mobile Number" })
                @Html.TextBoxFor(c => c.Address, new { placeholder = "Enter Address" })
                @Html.TextBoxFor(c => c.City, new { placeholder = "Enter City" })
                @Html.TextBoxFor(c => c.State, new { placeholder = "Enter State" })
                @Html.TextBoxFor(c => c.Zipcode, new { placeholder = "Enter Zipcode" })
                @Html.TextBoxFor(c => c.ReferredBy, new { placeholder = "Enter Reference" })
                @Html.DropDownList("BloodType",
                    EnumHelper.GetSelectList(typeof(BloodType)),
                    "Select Blood Type",
                    new { @class = "form-control" })
            </div>
            <div class="btn-wrapper">
                <input type="submit" value="Save" />
                @Html.ActionLink("Cancel", "Index", new { controller = "Contacts" }, new { @class="btn"})
            </div>
        </div>
    }
</div>
